{
  "name": "ChatGPT PromptJump",
  "version": "1.0",
  "manifest_version": 3,
  "description": "PromptJump â€” jump to saved prompts in active chat",
  "icons": {
    "16": "icons/logo-16.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["page_monitor.js","page_bridge.js"],
      "matches": ["https://chat.openai.com/*","https://chatgpt.com/*"]
    }
  ],  
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*","https://chatgpt.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/logo-16.png",
      "48": "icons/logo-48.png",
      "128": "icons/logo-128.png"
    },
    "default_title": "PromptJump",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"]
}
